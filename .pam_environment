# default
EDITOR          DEFAULT=nvim
BROWSER         DEFAULT=google-chrome-stable
MANPAGER        DEFAULT="nvim +Man! --cmd 'let $NVIM_AS_PAGER=1'"

# chinese
LANG            DEFAULT=zh_CN.UTF-8
LANGUAGE        DEFAULT=zh_CN:en_US

# xdg base directory
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share

# zsh
ZDOTDIR         DEFAULT=${XDG_CONFIG_HOME}/zsh
HISTFILE        DEFAULT=${XDG_DATA_HOME}/zsh/history
ZIM_HOME        DEFAULT=${XDG_CONFIG_HOME}/zim

### fcitx5 ###
GTK_IM_MODULE   DEFAULT=fcitx
QT_IM_MODULE    DEFAULT=fcitx
XMODIFIERS      DEFAULT=@im=fcitx
INPUT_METHOD    DEFAULT=fcitx
SDL_IM_MODULE   DEFAULT=fcitx

# X11
XINITRC         DEFAULT=${XDG_CONFIG_HOME}/X11/xinitrc
XSERVERRC       DEFAULT=${XDG_CONFIG_HOME}/X11/xserverrc
XAUTHORITY      DEFAULT=${XDG_RUNTIME_DIR}/Xauthority
# z
_Z_DATA         DEFAULT=${XDG_DATA_HOME}/z

# path
PATH            DEFAULT=${PATH}:@{HOME}/.local/bin:@{HOME}/.local/mbin:@{HOME}/.local/mbin/dwm:@{HOME}/.local/mbin/dwm/statusbar:@{HOME}/.local/mbin/st:@{HOME}/.local/mbin/dmenu:@{HOME}/.local/mbin/bspwm:@{HOME}/.local/mbin/funny:/usr/local/sbin:/usr/local/bin:/usr/bin

# sudo
SUDO_ASKPASS    DEFAULT=@{HOME}/.local/mbin/dmenu/dmenupass

#app
W3M_DIR         DEFAULT=${XDG_CONFIG_HOME}/w3m
WINEPREFIX      DEFAULT=${XDG_DATA_HOME}/wineprefixes
