[global]
#   Display
    monitor = 0
    follow = mouse
    geometry = "420-30+50"
    indicate_hidden = yes
    shrink = yes
    transparency = 2
    notification_height = 5
    separator_height = 2

    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0

    frame_width = 2
    outer_frame_width = 2
    frame_color = "#bf616a"
    outer_frame_color = "#222222"
    separator_color = "#4c566a"
    sort = yes
    idle_threshold = 120

#   Text
    font = Monospace 12
    line_height = 1
    markup = full

#   The format of the message.  Possible variables are:
#     %a  appname
#     %s  summary
#     %b  body
#     %i  iconname (including its path)
#     %I  iconname (without its path)
#     %p  progress value if set ([  0%] to [100%]) or nothing
#     %n  progress value if set without any extra characters
#     %%  Literal %
#   Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = no
    ellipsize = end
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

#   Icons
    icon_position = left
    max_icon_size = 150
    min_icon_size = 0
    icon_path = ~/.icons/flattrcolor/status/24:~/.icons/flattrcolor/devices/48:~/.icons/flattrcolor/apps/scalable:~/.icons/flattrcolor/actions/scalable

#   History
    sticky_history = yes
    history_length = 20

#   Misc/Advanced 
    dmenu = /usr/bin/rofi -show run
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    verbosity = mesg
    corner_radius = 0
    ignore_dbusclose = false
    force_xwayland = false
    force_xinerama = false

#   mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period

[urgency_low]
#   background =  "#81a1c1"
#   foreground = "#2e3440"
#    frame_color = "#282828"

    background = "#65c2f5"
    foreground = "#ffffff"
    frame_color = "#abcdef"
    timeout = 10

