# bin path
PATH            DEFAULT=${PATH}:@{HOME}/.local/bin
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/dwm:@{HOME}/MK/mbin/dwm/statusbar
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/st
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/dmenu
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/bspwm
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/funny
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/general
PATH            DEFAULT=${PATH}:@{HOME}/MK/mbin/polybar
PATH            DEFAULT=${PATH}:/usr/local/sbin:/usr/local/bin:/usr/bin

# default
EDITOR          DEFAULT=nvim
BROWSER         DEFAULT=google-chrome-stable
MANPAGER        DEFAULT="nvim +Man! --cmd 'let $NVIM_AS_PAGER=1'"

# chinese
LANG            DEFAULT=zh_CN.UTF-8
LANGUAGE        DEFAULT=zh_CN:en_US

# xdg base directory
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share

# zsh
ZDOTDIR         DEFAULT=${XDG_CONFIG_HOME}/zsh
HISTFILE        DEFAULT=${XDG_DATA_HOME}/zsh/history
ZIM_HOME        DEFAULT=${XDG_CONFIG_HOME}/zim

### fcitx5 ###
GTK_IM_MODULE   DEFAULT=fcitx
QT_IM_MODULE    DEFAULT=fcitx
XMODIFIERS      DEFAULT=@im=fcitx
INPUT_METHOD    DEFAULT=fcitx
SDL_IM_MODULE   DEFAULT=fcitx

# X11
XINITRC         DEFAULT=${XDG_CONFIG_HOME}/X11/xinitrc
XSERVERRC       DEFAULT=${XDG_CONFIG_HOME}/X11/xserverrc
XAUTHORITY      DEFAULT=${XDG_RUNTIME_DIR}/Xauthority
# z
_Z_DATA         DEFAULT=${XDG_DATA_HOME}/z

# sudo
SUDO_ASKPASS    DEFAULT=@{HOME}/.local/mbin/dmenu/dmenupass

#w3m
W3M_DIR         DEFAULT=${XDG_CONFIG_HOME}/w3m

#wine
WINEPREFIX      DEFAULT=${XDG_DATA_HOME}/wineprefixes

#gtk
GTK_RC_FILES    DEFAULT=${XDG_CONFIG_HOME}/gtk-1.0/gtkrc
GTK2_RC_FILES   DEFAULT=${XDG_CONFIG_HOME}/gtk-2.0/gtkrc

#CUDA
CUDA_CACHE_PATH DEFAULT=${XDG_CONFIG_HOME}/nv

#Leiningen
LEIN_HOME       DEFAULT=${XDG_DATA_HOME}/lein

#Gnupg
GNUPGHOME       DEFAULT=${XDG_DATA_HOME}/gnupg

#CARGO
CARGO_HOME      DEFAULT=${XDG_DATA_HOME}/cargo

#Parallel
PARALLEL_HOME   DEFAULT=${XDG_CONFIG_HOME}/parallel

#Rustup
RUSTUP_HOME     DEFAULT=${XDG_DATA_HOME}/rustup
